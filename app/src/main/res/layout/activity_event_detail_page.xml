<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".EventDetailPage">

    <TextView
        android:id="@+id/location"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:text="Location:"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <TextView
        android:id="@+id/txtLocations"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="36dp"
        android:text="Loc"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTimes" />

    <TextView
        android:id="@+id/business"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:text="Business:"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <TextView
        android:id="@+id/txtBusinesses"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="36dp"
        android:text="Busi"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLocations" />

    <TextView
        android:id="@+id/Cost"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:text="Cost:"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business" />

    <TextView
        android:id="@+id/txtCosts"
        android:layout_width="96dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="92dp"
        android:text="Cost"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBusinesses" />

    <TextView
        android:id="@+id/time"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="68dp"
        android:text="Time:"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEventName" />

    <TextView
        android:id="@+id/txtTimes"
        android:layout_width="102dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="88dp"
        android:text="Time"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEventName" />

    <TextView
        android:id="@+id/txtEventName"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:layout_marginTop="64dp"
        android:text="Event"
        android:textColor="@color/purple_200"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>